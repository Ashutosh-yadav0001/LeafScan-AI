# Azure App Service deployment configuration

# Python version
PYTHON_VERSION=3.9

# Startup command for Azure App Service
STARTUP_COMMAND="cd API && uvicorn main:app --host 0.0.0.0 --port 8000"

# Enable build during deployment
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Post-deployment script
POST_DEPLOYMENT_ACTION="pip install -r requirements.txt"
