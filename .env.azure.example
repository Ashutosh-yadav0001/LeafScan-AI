# Azure Environment Variables Configuration
# Copy this file to .env and fill in your values

# Azure App Service Names (must be globally unique)
AZURE_WEBAPP_BACKEND_NAME=potato-disease-backend-YOUR-UNIQUE-ID
AZURE_WEBAPP_FRONTEND_NAME=potato-disease-frontend-YOUR-UNIQUE-ID

# Azure Resource Group
AZURE_RESOURCE_GROUP=potato-disease-rg
AZURE_LOCATION=eastus

# Azure Container Registry (if using containers)
ACR_NAME=potatodiseaseacrYOURID
ACR_USERNAME=
ACR_PASSWORD=

# Backend Configuration
PORT=8000
CORS_ORIGINS=http://localhost:3000,https://potato-disease-frontend-YOUR-UNIQUE-ID.azurewebsites.net

# Frontend Configuration
REACT_APP_API_URL=https://potato-disease-backend-YOUR-UNIQUE-ID.azurewebsites.net

# Azure Subscription (optional)
AZURE_SUBSCRIPTION_ID=

# GitHub Secrets (for CI/CD)
# These should be added to your GitHub repository secrets:
# - AZURE_CREDENTIALS (service principal JSON)
# - AZURE_WEBAPP_BACKEND_NAME
# - AZURE_WEBAPP_FRONTEND_NAME
# - BACKEND_URL (backend API URL)
# - RESOURCE_GROUP
# - ACR_NAME
# - ACR_USERNAME
# - ACR_PASSWORD
# - UNIQUE_ID (for DNS labels)
